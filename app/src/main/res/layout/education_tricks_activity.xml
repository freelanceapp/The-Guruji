<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/subjectRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible" />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/waitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Please Wait..."
        android:textColor="#474747"
        android:layout_centerInParent="true"
        android:layout_below="@+id/progressBar"
        android:textSize="14dp" />



    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--    Maths -->
                <android.support.v7.widget.CardView
                    android:id="@+id/math"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e0"
                    android:elevation="10dp"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="Maths Tricks"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--Reasoning-->
                <android.support.v7.widget.CardView
                    android:id="@+id/reasoning"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e1"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="Reasoning Tricks"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- General GK-->
                <android.support.v7.widget.CardView
                    android:id="@+id/gk"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e2"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="General Science GK"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--India GK-->
                <android.support.v7.widget.CardView
                    android:id="@+id/indiagk"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e2"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="India GK"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <!-- World GK-->
                <android.support.v7.widget.CardView
                    android:id="@+id/worldgk"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e2"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="World GK"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <!-- Current GK-->
                <android.support.v7.widget.CardView
                    android:id="@+id/currentgk"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e2"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="Current GK"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <!-- History GK-->
                <android.support.v7.widget.CardView
                    android:id="@+id/historygk"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e2"
                    android:elevation="10dp"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="भारतीय-राजव्यवस्था"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <!-- Political GK-->
                <android.support.v7.widget.CardView
                    android:id="@+id/politicalgk"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e2"
                    android:elevation="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="political GK"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>




                <!--Mind-->
                <android.support.v7.widget.CardView
                    android:id="@+id/mind"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e3"
                    android:elevation="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="Mind Tricks"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--Railway-->
                <android.support.v7.widget.CardView
                    android:id="@+id/railway"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e4"
                    android:elevation="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="Railway Tricks"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--UPSC-->
                <android.support.v7.widget.CardView
                    android:id="@+id/upsc"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e5"
                    android:elevation="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="UPSC Tricks"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--SSC-->
                <android.support.v7.widget.CardView
                    android:id="@+id/ssc"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e6"
                    android:elevation="10dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:text="SSC Tricks"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <!--ads view-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e6"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">



                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e7"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/e7"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>




    </ScrollView>



</RelativeLayout>
